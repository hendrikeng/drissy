{#
  Matrix: Category (templates/matrix/category.twig)
  ------------------------------------------------------------
  Categories function as Tags, if a category has a parent
  (parents/top-level-categories should be equal to section handles!)
  we will get the matching tag/partent-category using category[category|length-1] on relatedTo.
#}

{% extends "matrix/default.twig" %}

{% set category = block.category %}


{% if category %}

    {% set entries = craft.entries({
        section: category.value,
    } ) %}

{% endif %}

{% block blockContent %}

    {% if category %}
        {% if category.value != 'partner' %}
            <div class="flex flex-wrap justify-center items-start -mx-3 mt-10">
            {% else %}
            <ul class="leading-loosish list-disc list-outside pl-5 mt-5 md:mt-6">
        {% endif %}

        {% for entry in entries.all() %}
            {% include '_item.twig' %}
        {% endfor %}
                {% if category.value != 'partner' %}
                    </div>
                    {% else %}
                        </ul>
                    {% endif %}

    {% endif %}

{% endblock %}

