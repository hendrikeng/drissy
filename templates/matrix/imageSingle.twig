{% extends "matrix/default.twig" %}

{% block blockContent %}
    <figure
        class="p-4 mb-8 bg-green-200 w-full md:{{ block.columns ?? 'w-full' }}">
        {% include '_elements/img/default.twig' with {
            data : {
                imager: {
                    options: {
                        dominantColor: false,
                        blurUp: true,
                        mediaBox: block.ratio.value == 'auto' ? false : true,
                        objectFit: block.ratio.value == 'auto' ? false : true,
                        ratio: block.ratio.value,
                    },
                    images: {
                        imageLandscape: block.image.one() ?? null,
                    }
                },
            }
        } only %}
        {% if block.caption %}
            <figcaption class="text-sm mt-2"
                        itemprop="caption description">{{ image.caption }}</figcaption>
        {% endif %}
    </figure>
{% endblock %}
