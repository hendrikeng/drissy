{% extends "matrix/default.twig" %}

{% block blockContent %}
    <div class="relative glide {{ block.layout }} p-4 mb-8 bg-green-200 w-full">
        <div data-glide-el="track" class="glide__track">
            <div class="glide__slides">
                {% for image in block.images.all() %}
                    <div class="glide__slide">
                        {% if image %}
                            {% include '_elements/img/default' with {
                                data : {
                                    imager: {
                                        options: {
                                            dominantColor: false,
                                            blurUp: true,
                                            mediaBox: block.ratio.value == 'auto' ? false : true,
                                            objectFit: block.ratio.value == 'auto' ? false : true,
                                            ratio: block.ratio.value,
                                        },
                                        images: {
                                            imageLandscape: image,
                                        },
                                    },
                                }
                            } only %}
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
        <div
            class="absolute inset-y-0 inset-x-0 flex flex-col w-full h-full items-center justify-center "
            data-glide-el="controls">
            <button class=" absolute left-0 glide__arrow glide__arrow--left"
                    data-glide-dir="<" aria-label="previous slide">
                {% include '_svg/iconArrowLeft.svg' with {
                    data : {
                        svg: {
                            class: 'w-16 fill-current text-white ml-4',
                        }
                    }
                } only %}
            </button>
            <button class=" absolute right-0 glide__arrow glide__arrow--right"
                    data-glide-dir=">" aria-label="next slide">
                {% include '_svg/iconArrowRight.svg' with {
                    data : {
                        svg: {
                            class: 'w-16 fill-current text-white mr-4',
                        }
                    }
                } only %}
            </button>
        </div>
    </div>

{% endblock %}
